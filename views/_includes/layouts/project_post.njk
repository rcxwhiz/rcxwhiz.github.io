{% extends "layouts/base.njk" %}

{% block content %}
<div class="row justify-content-center mt-4">
    <div class="generic-col">
        <div>
            <h1>{{ title }}</h1>

            <div class="row justify-content-start">
                <ul class="list-group list-group-flush col-auto">
                    <li class="list-group-item">
                        <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>{% if updated %} | Updated <time datetime="{{ updated | htmlDateString }}">{{ updated | readableDate }}</time>{% endif %}
                    </li>
                    {% if repo %}<li class="list-group-item">
                        Repo: <a href="{{ repo }}">{{ repo.split('//')[1] }}</a>
                    </li>{% endif %}
                    {% if repo %}<li class="list-group-item">
                        Demo: <a href="{{ demo }}">{{ demo.split('//')[1] }}</a>
                    </li>{% endif %}
                </ul>
            </div>
        </div>
        <div>
            {{ content | safe }}
        </div>
    </div>
    
</div>
{% endblock %}
